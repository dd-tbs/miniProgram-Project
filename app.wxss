@import "./styles/iconfont.wxss";

/* 微信小程序中不识别通配符 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin:0;
  box-sizing: border-box;
}

/* 
  主题颜色 通过变量来实现
    less中存在变量
    原生css和wxss也支持
*/

page{
  /* 定义主题颜色 */
  --themeColor:#eb4450;
  /* 定义 统一 字体大小 假设 设计稿是375px */
  /* 1px = 2rpx */
  font-size: 28rpx;
}

image{
  width: 100%;
}